<!-- include header -->
    <%- include('./../incs/_header.ejs') %>
<!-- end header -->

    <div class="container-fluid">
      <div class="row">
          <div class="col-12 mt-5 mb-5">
            <a href="/users/add" class="btn btn-primary"><span class="icon-user-plus"></span> Create User</a>
        </div>          
      </div>
      <div class="row">
        <div class="col-12">
          <% if (message) { %>
            <div class="alert  alert-dismissable fade show alert-<%= message.type  %>" role="alert">
             <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
             <strong><%= message.message %> </strong>
            </div>
           <% } %>
        </div>
      </div>

      <div class="card text-bg-light">
        <h5 class="card-header">Lists</h5>

        <div class="card-body">
          <div class="table-responsive custom-table-responsive">
            <table class="table custom-table">
              <thead>
                <tr>  
                  
                  <th scope="col">No#</th>
                  <th scope="col">Fullname</th>
                  <th scope="col">Gender</th>
                  <th scope="col">Birthdate</th>
                  <th scope="col">Job Role</th>
                  <th scope="col">Status</th>
                  <th scope="col">Actions</th>
  
                </tr>
              </thead>
              <tbody>
                <% 
                    for (let user of users) {
                %>
                <tr scope="row">
                  <td>
                    <%= user._id %>
                  </td>
                  <td><a href="#"><%= user.surname %>, <%= user.firstname %></a></td>
                  <td>
                    <% if(user.gender == 'M') { %>
                        Male
                    <%  } else { %>
                        Female
                    <% } %>
                  </td>
                  <td><%= user.birthdate %></td>
                  <td><%= user.job_title %></td>
                  <td>
                    <% if( user.status == 1) { %>
                        <span class="badge text-bg-success">active</span>
                    <%  } else { %>
                        <span class="badge text-bg-danger">disabled</span>
                    <% } %>
                  </td>
                  <td>
                    <a href="/users/edit/<%= user._id %>" class="btn btn-success"><span class="icon-pencil"></span></a>
                    <a href="/users/delete/<%= user._id %>" class="btn btn-danger"><span class="icon-trash"></span></a>
                    <a href="/users/reset/<%= user._id %>" class="btn btn-primary"><span class="icon-key"></span></a>
                  </td>

                </tr>  
                <%
                  }
                %>          
              </tbody>
            </table>
          </div>

        </div>
      </div>



    </div>

<!-- include footer -->
    <%- include('./../incs/_footer.ejs') %> 
<!-- end footer -->